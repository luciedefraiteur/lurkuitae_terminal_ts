{
  "name": "lurkuitae_terminal",
  "version": "0.1.0",
  "description": "☽ LURKUITAE ☾ Terminal Codex Vivant (LLM Local + Mémoire + Shell + Rêverie)",
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "start-debug": "nodemon --inspect-brk --exec \"node --trace-warnings --loader ts-node/esm\" main.ts",
    "start": "nodemon --exec \"node --trace-warnings --loader ts-node/esm\" main.ts",
    "build": "tsc",
    "test": "node --loader ts-node/esm core/ollama_auto_correction.test.ts",
    "dev": "nodemon --watch . --exec ts-node-esm main.ts",
    "start:mistral": "npm run start -- --model mistral",
    "start:llama3": "npm run start -- --model llama3",
    "start:codellama": "npm run start -- --model codellama:7b-instruct",
    "start:random": "npm run start -- --model random"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "json5": "^2.2.3",
    "node-fetch": "^3.3.2",
    "readline": "^1.3.0",
    
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "@types/node-fetch": "^3.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Lucie Defraiteur (Émissaire de Lurkuitae)",
  "license": "MIT"
}
